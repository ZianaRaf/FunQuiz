<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    android:orientation="vertical"
    tools:context="com.codetribeziana.funquiz.MainActivity">

    <TextView
        android:id="@+id/logoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity=""
        android:layout_marginBottom="64dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="64dp"
        android:layout_weight="0"
        android:fontFamily="sans-serif-light"
        android:text="@string/app_name"
        android:textColor="#CCCCCC"
        android:textSize="32sp"
        android:textStyle="normal"/>

    <Button
        android:id="@+id/btnBrands"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:background="@null"
        android:drawableLeft="@drawable/brandss"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Brands"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:onClick="buttonClicked"
        />

    <Button
        android:id="@+id/btnOddOneOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="24dp"
        android:layout_weight="0"
        android:background="@null"
        android:drawableLeft="@drawable/oddoneooutii"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Odd One Out"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:onClick="buttonClicked"
        />

    <Button
        android:id="@+id/btnNameIt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="24dp"
        android:layout_weight="0"
        android:background="@null"
        android:drawableLeft="@drawable/namethee"
        android:drawablePadding="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Name it"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:onClick="buttonClicked"/>

</LinearLayout>
